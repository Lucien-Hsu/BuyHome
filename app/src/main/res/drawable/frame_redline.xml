<?xml version="1.0" encoding="utf-8"?>

<!--    指定形狀類型，默認為rectangle-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!--    指定尺寸-->
    <size>24</size>

    <!--    指定填充色，只有 android:color 一個屬性。-->
    <solid android:color="#00000000" />

    <!--    指定描邊-->
        <stroke
            android:width="1dp"
            android:color="#ffff0000" />

    <!--    指定圓角，只適用於 rectangle。-->
    <corners android:radius="6dp" />

    <!--    指定內距-->
        <paddin
            android:bottom="12dp"
            android:left="12dp"
            android:right="12dp"
            android:top="12dp" />

</shape>