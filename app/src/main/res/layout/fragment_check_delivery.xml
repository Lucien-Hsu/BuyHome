<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEFF1"
    tools:context=".fragment_cart.CheckDelivery">

    <Button
        android:id="@+id/btn_gobackto_checkdeal"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_01"
        android:shadowColor="#000000"
        android:text="確認"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_store_pickup"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/frame_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_home_delivery" />

    <Button
        android:id="@+id/btn_store_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_01"
        android:text="選擇門市"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_store_pickup"
        app:layout_constraintStart_toStartOf="@+id/tv_store_pickup"
        app:layout_constraintTop_toBottomOf="@+id/tv_store_pickup" />

    <TextView
        android:id="@+id/tv_store_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:text="全家XXX門市"
        app:layout_constraintBottom_toTopOf="@+id/btn_store_pickup"
        app:layout_constraintStart_toStartOf="@+id/cb_store_pickup"
        app:layout_constraintTop_toBottomOf="@+id/cb_store_pickup" />

    <CheckBox
        android:id="@+id/cb_store_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="便利商店取貨"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_store_pickup"
        app:layout_constraintStart_toStartOf="@+id/img_store_pickup"
        app:layout_constraintTop_toTopOf="@+id/img_store_pickup" />

    <ImageView
        android:id="@+id/img_home_delivery"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/frame_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_recipient" />

    <Button
        android:id="@+id/btn_home_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_01"
        android:text="選擇地址"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/img_home_delivery"
        app:layout_constraintStart_toStartOf="@+id/tv_home_delivery_adress"
        app:layout_constraintTop_toBottomOf="@+id/tv_home_delivery_adress" />

    <TextView
        android:id="@+id/tv_home_delivery_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="20"
        android:text="台北市中正路123號"
        app:layout_constraintBottom_toTopOf="@+id/btn_home_delivery"
        app:layout_constraintStart_toStartOf="@+id/cb_home_delivery"
        app:layout_constraintTop_toBottomOf="@+id/cb_home_delivery" />

    <CheckBox
        android:id="@+id/cb_home_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:checked="true"
        android:text="宅配"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_home_delivery_adress"
        app:layout_constraintStart_toStartOf="@+id/img_home_delivery"
        app:layout_constraintTop_toTopOf="@+id/img_home_delivery" />

    <ImageView
        android:id="@+id/img_recipient"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/frame_01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tv_recipient_phone_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0912345678"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipient_phone_text"
        app:layout_constraintStart_toEndOf="@+id/tv_recipient_phone_text"
        app:layout_constraintTop_toTopOf="@+id/tv_recipient_phone_text" />

    <TextView
        android:id="@+id/tv_recipient_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="電話："
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="@+id/img_recipient"
        app:layout_constraintStart_toStartOf="@+id/tv_recipient_name_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipient_name_text" />

    <EditText
        android:id="@+id/tv_recipient_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipient_name_text"
        app:layout_constraintStart_toEndOf="@+id/tv_recipient_name_text"
        app:layout_constraintTop_toTopOf="@+id/tv_recipient_name_text" />

    <TextView
        android:id="@+id/tv_recipient_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名："
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/tv_recipient_phone_text"
        app:layout_constraintStart_toStartOf="@+id/tv_recipient"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipient" />

    <TextView
        android:id="@+id/tv_recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="收件者"
        android:textColor="?android:attr/textColorPrimary"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_recipient_name_text"
        app:layout_constraintStart_toStartOf="@+id/img_recipient"
        app:layout_constraintTop_toTopOf="@+id/img_recipient" />

</androidx.constraintlayout.widget.ConstraintLayout>